package basic;

public class mang2 {

	public static void main(String[] args) {
		//Truyền mảng vào phương thức
		int a[] = {1, 3, 5, 7};
		mang(a);

	}
	
	public void mang(int arr[]) {
		int min = arr[0];
		for(int i = 1; i < arr.length; i++) {
			if(min > arr[i]) {
				min = arr[i];
			}
		}
		System.out.println(min);
	}

}
