package basic;

public class mang_function {

	public static void main(String[] args) {
		// Truyền mảng vào phương thức
		int a[] = { 6, 3, 5, 7 };
		mang(a);

	}

	static void mang(int arr[]) {
		int min = arr[0];
		for (int i = 2; i < arr.length; i++) {
			if (min < arr[i]) {
				min = arr[i];
			}
		}
		System.out.println(min);
	}

}
